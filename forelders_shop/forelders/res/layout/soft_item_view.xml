<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/soft_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/soft_rank"
            style="@style/white_h5_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kaka_5_dip"
            android:layout_marginTop="@dimen/kaka_5_dip"
            android:background="@drawable/rank_bg_gray"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/soft_logo"
            android:layout_width="@dimen/kaka_55_dip"
            android:layout_height="@dimen/kaka_55_dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/kaka_11_dip"
            android:contentDescription="@null"
            android:src="@drawable/img_default" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="@dimen/kaka_55_dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/soft_name"
                style="@style/black_h5_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxEms="20"
                android:singleLine="true" />

            <RatingBar
                android:id="@+id/soft_rating_bar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:isIndicator="true"
                android:max="50"
                android:numStars="5"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/center_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/soft_count"
                    style="@style/sumary_color_h6_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/kaka_1_dip"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/soft_size"
                    style="@style/sumary_color_h6_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/soft_count"
                    android:singleLine="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/soft_summary"
                style="@style/sumary_color_h6_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:gravity="left|center"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/downbtn_layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3" >

            <TextView
                android:id="@+id/soft_downbtn"
                style="@style/text_center_h6"
                android:layout_width="@dimen/kaka_52_dip"
                android:layout_height="@dimen/kaka_25_dip"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/kaka_8_dip"
                android:background="@drawable/status_runed"
                android:contentDescription="@null"
                android:text="@string/download"
                android:textColor="@color/status_run" />

            <ProgressBar
                android:id="@+id/soft_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/kaka_60_dip"
                android:layout_height="@dimen/kaka_6_dip"
                android:layout_below="@+id/soft_downbtn"
                android:layout_marginLeft="@dimen/kaka_8_dip"
                android:layout_marginRight="@dimen/kaka_8_dip"
                android:layout_marginTop="@dimen/kaka_5_dip"
                android:max="100"
                android:progressDrawable="@drawable/progressbar_style"
                android:visibility="gone" />

            <TextView
                android:id="@+id/soft_precent"
                style="@style/white_h6_text"
                android:layout_width="@dimen/kaka_60_dip"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/kaka_8_dip"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/soft_brief"
        style="@style/text_center_h7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/kaka_2_dip"
        android:layout_marginRight="@dimen/kaka_2_dip"
        android:textColor="@color/gray_6C"
        android:visibility="gone" />

</LinearLayout>