<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray" >

    <ImageView
        android:id="@+id/spinner_iv"
        android:layout_width="@dimen/kaka_20_dip"
        android:layout_height="@dimen/kaka_20_dip"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/kaka_15_dip"
        android:layout_marginLeft="@dimen/kaka_4_dip"
        android:layout_marginRight="@dimen/kaka_2_dip"
        android:layout_marginTop="@dimen/kaka_15_dip"
        android:contentDescription="@null"
        android:src="@drawable/img_default" />

    <TextView
        android:id="@+id/spinner_tv"
        style="@style/text_center_h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/kaka_4_dip"
        android:layout_toRightOf="@+id/spinner_iv"
        android:textColor="@color/gray_66" />

</RelativeLayout>