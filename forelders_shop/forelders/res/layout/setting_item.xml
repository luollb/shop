<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/cn.cy.mobilegames.yyjia.forelders"
    xmlns:app="http://schemas.android.com/apk/res/cn.cy.mobilegames.yyjia.forelders"
    android:id="@+id/setting_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_press_gray" >

    <ImageView
        android:id="@+id/setting_logo"
        android:layout_width="@dimen/kaka_25_dip"
        android:layout_height="@dimen/kaka_25_dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/kaka_4_dip"
        android:contentDescription="@null"
        android:src="@drawable/slidding_menu_settings" />

    <TextView
        android:id="@+id/setting_title"
        style="@style/text_h6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/kaka_5_dip"
        android:layout_toRightOf="@+id/setting_logo"
        android:singleLine="true"
        android:textColor="@color/status_wait" />

    <TextView
        android:id="@+id/nav_content"
        style="@style/text_h6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/kaka_8_dip"
        android:singleLine="true"
        android:textColor="@color/status_wait" />

    <ImageView
        android:id="@+id/setting_more"
        android:layout_width="@dimen/kaka_15_dip"
        android:layout_height="@dimen/kaka_20_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/kaka_9_dip"
        android:contentDescription="@null"
        android:src="@drawable/see_more"
        android:visibility="gone" />

    <com.zcw.togglebutton.ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="@dimen/kaka_60_dip"
        android:layout_height="@dimen/kaka_30_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/kaka_8_dip"
        android:visibility="gone"
        app:offColor="@color/orange_dark"
        app:onColor="@color/status_run" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_tran" />

</RelativeLayout>