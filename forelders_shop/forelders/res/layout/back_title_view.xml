<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back_nav_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kaka_43_dip"
        android:background="@color/tab_blue"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/kaka_43_dip"
            android:layout_height="@dimen/kaka_43_dip"
            android:background="@drawable/bg_press_blue"
            android:contentDescription="@null"
            android:padding="@dimen/kaka_10_dip"
            android:scaleType="center"
            android:src="@drawable/img_back" />

        <RelativeLayout
            android:id="@+id/search_et_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone" >

            <EditText
                android:id="@+id/search_et"
                style="@style/black_h6_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kaka_25_dip"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/search_btn"
                android:background="@drawable/cornors_white_white"
                android:drawableLeft="@drawable/search_black"
                android:hint="@string/search_hint"
                android:paddingLeft="@dimen/kaka_2_dip"
                android:singleLine="true"
                android:textColorHint="@color/gray_6b" />

            <ImageView
                android:id="@+id/search_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/search_et"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/search_btn"
                android:contentDescription="@null"
                android:padding="@dimen/kaka_2_dip"
                android:scaleType="center"
                android:src="@drawable/icon_cancel"
                android:visibility="gone" />

            <Button
                android:id="@+id/search_btn"
                style="@style/text_center_h4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/kaka_25_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/kaka_4_dip"
                android:layout_marginRight="@dimen/kaka_4_dip"
                android:background="@drawable/bg_press_gray"
                android:padding="@dimen/kaka_2_dip"
                android:text="@string/search_title"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            style="@style/text_h5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/kaka_5_dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="@dimen/kaka_43_dip"
            android:layout_height="@dimen/kaka_43_dip" >

            <ImageView
                android:id="@+id/menu_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_press_blue"
                android:contentDescription="@null"
                android:padding="@dimen/kaka_10_dip"
                android:scaleType="center"
                android:src="@drawable/img_more" />

            <TextView
                android:id="@+id/select_all"
                style="@style/white_h5_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_press_gray"
                android:contentDescription="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/all_select_text"
                android:textColor="@color/status_run"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_6d"
        android:visibility="gone" />

</LinearLayout>